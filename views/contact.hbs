<html>
    <head>
        <title>Contact Form</title>
        <link rel="stylesheet" href="../public/assets/css/style.css">
        <link rel="shortcut icon" href="../public/assets/images/logo.png" type="image/x-icon">
        <script src="../public/assets/js/form.js"></script>
    </head>
    <body>
        <nav>
            <div class="left">
                <a class="logo" href="https://happytrigger.net"><img src="../public/assets/images/logo.png" alt="logo"></a>
                <ul>
                    <li><a href="/" class="home-deactive">Home</a></li>
                    <li><a href="/blog" class="blog-deactive">Blog</a></li>
                </ul>
            </div>
            <div class="right">
                <a class="contact" href="/contact">Contact Me</a>
            </div>
        </nav>
        
        <div class="container-contact">
            <form>
                <h3>Contact Form</h1>

                <div>
                    <label for="input-name">Name</label>
                    <input id="input-name" type="text">
                </div>

                <div>
                    <label for="input-email">Email</label>
                    <input type="email" id="input-email">
                </div>
                
                <div>
                    <label for="input-phone">Phone Number</label>
                    <input type="number" id="input-phone">
                </div>

                <div>
                <label for="input-subject">Subject</label>
                <select onchange="showHide()" required id="input-subject">
                    <option value="" disabled selected>Select Here</option>
                    <option value="I'm Hiring">I'm Hiring</option>
                    <option value="Collaboration">Collaboration</option>
                    <option value="Problem with the site">Problem with the site</option>
                </select>
                </div>

                <div id="programming-language" class="programming-language">
                    <label for="checkbox">Programming Language</label>
                    <div id="checkbox">
                        <input type="checkbox" value="Javascript" id="javascript">
                        <label style="font-size: 18px;" for="javascript">Javascript</label>
                        <br>
                        <input type="checkbox" value="PHP" id="php">
                        <label style="font-size: 18px;" for="cpp">PHP</label>
                    </div>  
                </div>

                <script>
                    document.getElementById("programming-language").style.display = "none";
                    function showHide(){
                        a = document.getElementById('input-subject').value;

                        if(a == "I'm Hiring"){
                            document.getElementById("programming-language").style.display = "inline";
                        }
                        else if(a == "Collaboration"){
                            document.getElementById("programming-language").style.display = "none";
                        }
                        else if(a == "Problem with the site"){
                            document.getElementById("programming-language").style.display = "none";
                        }
                    }
                </script>

                <div>
                <label for="input-msg">Your Message</label>
                <textarea name="" id="input-msg" maxlength="150"></textarea>
                </div>
                
                <button type="button" onclick="submitData()"><img src="../public/assets/images/send.svg" width="14" alt="send"> Submit</button>
                
            </form>
        </div>
    </body>
</html>