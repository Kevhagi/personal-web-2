<html>
    <head>
        <title>Contact Form</title>
        <link rel="stylesheet" href="../public/assets/css/style.css">
        <link rel="shortcut icon" href="../public/assets/images/logo.png" type="image/x-icon">
        <script src="../public/assets/js/validasi.js"></script>
    </head>
    <body>
        <nav>
            <div class="left">
                <a class="logo" href="https://happytrigger.net"><img src="../public/assets/images/logo.png" alt="logo"></a>
                <ul>
                    <li><a href="/" class="home-deactive">Home</a></li>
                    <li><a href="/blog" class="blog-deactive">Blog</a></li>
                </ul>
            </div>
            <div class="right">
                <ul>
                    <li><a href="/register" class="home-deactive">Register</a></li>
                    <li><a href="/login" class="blog-active">Login</a></li>
                </ul>
                <a class="contact" href="/contact">Contact Me</a>
            </div>
        </nav>

        {{#if messages.danger}}
            <div class="alert alert-danger" role="alert">
                {{messages.danger}}
            </div>
        {{/if}}

        {{#if messages.success}}
            <div class="alert alert-success" role="alert">
                {{messages.success}}
            </div>
        {{/if}}
        
        <div class="container-contact">
            <form method="post" action="/login">
                <h2>Login</h2>

                <div>
                    <label for="input-email">Email</label>
                    <input type="email" id="input-email" name="inputEmail">
                </div>
                
                <div>
                    <label for="input-phone">Password</label>
                    <input type="password" id="input-password" name="inputPassword">
                </div>
                
                <button type="submit" onclick="validasiLogin()"><img src="../public/assets/images/send.svg" width="14" alt="send"> Submit</button>
                
            </form>
        </div>
    </body>
</html>